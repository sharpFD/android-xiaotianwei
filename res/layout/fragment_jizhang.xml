<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/home_background"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#25929090"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/jizhang_Iv_addyusuan"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/jizhang_Tv_addyusuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/jizhang_Iv_addyusuan"
                android:gravity="center"
                android:text="添加预算"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/jizhang_Iv_rili"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/cal" />
            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:id="@+id/rilitext"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="2" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jizhang_Tv_shouruwenzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="1月收入"
                />
            <TextView
                android:id="@+id/jizhang_Tv_zhichuwenzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="1月支出"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jizhang_Tv_shourushuzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="0.0"
                />
            <TextView
                android:id="@+id/jizhang_Tv_zhichushuzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="0.0"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_beizhu_pen"
        android:background="@drawable/jizhang_shape_touxiang"
        android:layout_marginTop="95dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/jizhang_Im_touxiang" />

    <ListView
        android:id="@+id/listview"
        android:layout_marginTop="190dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <ImageView
        android:id="@+id/jizhang_emptyview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
</RelativeLayout>